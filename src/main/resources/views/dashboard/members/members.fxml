<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>
<?import java.lang.*?>
<GridPane fx:id="membersPane" styleClass="members" xmlns="http://javafx.com/javafx/15.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ocielgp.controller.MembersController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" prefWidth="700.0"/>
        <ColumnConstraints fillWidth="false" minWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="SOMETIMES"/>
    </rowConstraints>
    <VBox alignment="TOP_CENTER">
        <FlowPane alignment="CENTER_LEFT" hgap="10.0" vgap="10.0">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
            <JFXButton styleClass="btn-primary" text="Consultar">
                <graphic>
                    <FontIcon iconLiteral="gmi-group"/>
                </graphic>
            </JFXButton>
            <JFXButton text="Socio nuevo">
                <styleClass>
                    <String fx:value="btn-primary"/>
                    <String fx:value="sucess-style"/>
                </styleClass>
                <graphic>
                    <FontIcon iconLiteral="gmi-person-add"/>
                </graphic>
            </JFXButton>
            <JFXButton text="Visita nueva">
                <styleClass>
                    <String fx:value="btn-primary"/>
                    <String fx:value="sucess-style"/>
                </styleClass>
                <graphic>
                    <FontIcon iconLiteral="gmi-add"/>
                </graphic>
            </JFXButton>
            <JFXButton text="Planes">
                <styleClass>
                    <String fx:value="btn-primary"/>
                    <String fx:value="warn-style"/>
                </styleClass>
                <graphic>
                    <FontIcon iconLiteral="gmi-date-range"/>
                </graphic>
            </JFXButton>
        </FlowPane>
        <VBox alignment="CENTER">
            <VBox alignment="CENTER" maxWidth="500.0" spacing="10.0">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
                <JFXTextField alignment="CENTER" promptText="Buscar por nombres / ID"/>
                <JFXButton styleClass="btn-primary" text="Buscar">
                    <graphic>
                        <FontIcon iconLiteral="gmi-search"/>
                    </graphic>
                </JFXButton>
            </VBox>
        </VBox>
        <ScrollPane fitToHeight="true" fitToWidth="true">
            <TableView fx:id="membersTable" tableMenuButtonVisible="true">
                <columns>
                    <TableColumn prefWidth="75.0" text="ID"/>
                    <TableColumn prefWidth="75.0" text="Nombres"/>
                    <TableColumn prefWidth="75.0" text="Apellidos"/>
                    <TableColumn prefWidth="75.0" text="DÃ­as restantes"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </ScrollPane>
    </VBox>
    <ScrollPane fx:id="memberPane" fitToHeight="true" fitToWidth="true" prefWidth="420.0" GridPane.columnIndex="1"/>
</GridPane>
