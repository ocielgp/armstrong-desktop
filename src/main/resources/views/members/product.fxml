<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="boxRoot" maxWidth="500.0" prefWidth="500.0" style="-fx-background-color: -fx-color-background; -fx-border-color: -fx-color-border;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane style="-fx-background-color: -fx-color-background;" styleClass="success-style">
        <VBox.margin>
            <Insets/>
        </VBox.margin>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <Label alignment="CENTER" styleClass="bold" text="NUEVA VENTA" AnchorPane.bottomAnchor="-1.0" AnchorPane.leftAnchor="-1.0" AnchorPane.rightAnchor="-1.0" AnchorPane.topAnchor="-1.0"/>
        <HBox layoutX="456.0" layoutY="14.0" style="-fx-cursor: hand;" AnchorPane.bottomAnchor="-1.0" AnchorPane.rightAnchor="-1.0" AnchorPane.topAnchor="-1.0">
            <FontIcon fx:id="fontIconClose" iconLiteral="gmi-close" iconSize="30"/>
        </HBox>
    </AnchorPane>
    <VBox spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
        <AnchorPane>
            <JFXComboBox fx:id="comboBoxProducts" promptText="Selecciona uno" AnchorPane.bottomAnchor="-1.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="-1.0"/>
        </AnchorPane>
    </VBox>
    <HBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets bottom="20.0"/>
        </padding>
        <JFXButton fx:id="buttonRegister" text="Registrar">
            <styleClass>
                <String fx:value="btn-colorful"/>
                <String fx:value="success-style"/>
            </styleClass>
        </JFXButton>
    </HBox>
</VBox>
