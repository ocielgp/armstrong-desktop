<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.lang.String?>
<VBox fx:id="boxRoot" maxWidth="500.0" prefWidth="500.0"
      style="-fx-background-color: -fx-color-background; -fx-border-color: -fx-color-border;"
      xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <AnchorPane style="-fx-background-color: -fx-color-background;" styleClass="success-style">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <children>
                <Label alignment="CENTER" styleClass="bold" text="NUEVA VISITA" AnchorPane.bottomAnchor="-1.0"
                       AnchorPane.leftAnchor="-1.0" AnchorPane.rightAnchor="-1.0" AnchorPane.topAnchor="-1.0"/>
                <HBox layoutX="456.0" layoutY="14.0" style="-fx-cursor: hand;" AnchorPane.bottomAnchor="-1.0"
                      AnchorPane.rightAnchor="-1.0" AnchorPane.topAnchor="-1.0">
                    <children>
                        <FontIcon fx:id="fontIconClose" iconLiteral="gmi-close" iconSize="30"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </AnchorPane>
        <VBox spacing="20.0">
            <children>
                <AnchorPane>
                    <children>
                        <JFXComboBox fx:id="comboBoxVisitors" promptText="Selecciona uno" AnchorPane.bottomAnchor="-1.0"
                                     AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0"
                                     AnchorPane.topAnchor="-1.0"/>
                    </children>
                </AnchorPane>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <JFXButton fx:id="buttonRegister" text="Registrar">
                    <styleClass>
                        <String fx:value="btn-colorful"/>
                        <String fx:value="success-style"/>
                    </styleClass>
                </JFXButton>
            </children>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
