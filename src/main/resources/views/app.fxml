<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ocielgp.controller.RootController">
   <bottom>
      <HBox styleClass="footer" BorderPane.alignment="CENTER">
         <HBox alignment="CENTER_LEFT">
            <children>
               <JFXComboBox fx:id="comboBoxGyms" promptText="Gimnnasio" />
            </children>
         </HBox>
         <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <Label text="Un proyecto de Ociel" />
         </HBox>
         <HBox alignment="CENTER_LEFT">
            <Button fx:id="theme" mnemonicParsing="false" styleClass="icon-theme-container">
               <graphic>
                  <FontIcon fx:id="iconTheme" iconLiteral="gmi-brightness-6" styleClass="icon-theme" />
               </graphic>
            </Button>
         </HBox>
      </HBox>
   </bottom>
</BorderPane>
