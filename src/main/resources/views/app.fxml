<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <HBox styleClass="footer" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Un proyecto de Ociel" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Button fx:id="theme" mnemonicParsing="false" styleClass="icon-theme-container">
                     <graphic>
                        <FontIcon fx:id="iconTheme" iconLiteral="gmi-brightness-6" styleClass="icon-theme" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </bottom>
</BorderPane>
