<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="boxDialog" style="-fx-border-color: -fx-color-border;" styleClass="day-theme" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="boxContent" alignment="CENTER" style="-fx-background-color: -fx-color-background;">
         <children>
            <Label fx:id="labelTitle" style="-fx-text-fill: -fx-color-text;" styleClass="bold" text="Title" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <VBox style="-fx-background-color: -fx-color-background;" styleClass="default-style">
         <children>
            <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="68.0">
               <content>
                  <VBox fx:id="boxContentBuilder" spacing="10.0">
                     <children>
                        <Label fx:id="labelContent" alignment="TOP_LEFT" style="-fx-text-fill: -fx-color-text;" text="Content" textAlignment="JUSTIFY" wrapText="true" />
                     </children>
                  </VBox>
               </content>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </ScrollPane>
            <HBox fx:id="boxDebt" style="-fx-background-color: #d3d3d3;">
               <children>
                  <Label style="-fx-text-fill: #333;" styleClass="bold" text="Deuda restante" textAlignment="JUSTIFY" wrapText="true">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets right="5.0" />
                     </padding>
                  </Label>
                  <Label fx:id="labelDebt" style="-fx-text-fill: #333;" text="\$" textAlignment="JUSTIFY" wrapText="true" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </VBox>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <JFXTextField fx:id="input" alignment="CENTER" maxWidth="300.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin></JFXTextField>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <JFXButton fx:id="buttonOk" styleClass="btn-colorful" text="Aceptar" />
                  <JFXButton fx:id="buttonCancel" text="Cancelar">
                     <styleClass>
                        <String fx:value="btn-colorful" />
                        <String fx:value="default-style" />
                     </styleClass>
                  </JFXButton>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>
