<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>


<ScrollPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ocielgp.controller.AddMemberController">
   <content>
      <VBox fx:id="addMemberPane" maxWidth="-Infinity" prefWidth="410.0" stylesheets="@../../styles.css">
         <children>
            <HBox alignment="CENTER" styleClass="member-title">
               <children>
                  <Label text="AGREGAR">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <VBox spacing="10.0">
               <children>
                  <VBox alignment="CENTER" spacing="10.0">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <VBox style="-fx-border-color: -fx-color-border;">
                                 <children>
                                    <ImageView fx:id="ph_imgMemberPhoto" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../../img.jpg" />
                                       </image>
                                    </ImageView>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="10.0">
                           <children>
                              <JFXButton fx:id="ph_buttonTakePhoto" styleClass="btn-primary" text="Tomar foto">
                                 <graphic>
                                    <FontIcon iconLiteral="gmi-add-a-photo" />
                                 </graphic>
                              </JFXButton>
                              <JFXButton fx:id="ph_buttonUploadPhoto" styleClass="btn-secondary" text="Subir foto">
                                 <graphic>
                                    <FontIcon iconLiteral="gmi-file-upload" />
                                 </graphic>
                              </JFXButton>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="5.0" styleClass="member-section">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <Label styleClass="bold" text="Información personal">
                                 <graphic>
                                    <FontIcon iconLiteral="gmi-person" />
                                 </graphic>
                              </Label>
                           </children>
                        </HBox>
                        <VBox>
                           <children>
                              <Label text="Nombres *">
                                 <graphic>
                                    <FontIcon iconLiteral="gmi-create" />
                                 </graphic>
                              </Label>
                              <JFXTextField fx:id="pi_fieldNames" styleClass="thin" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Apellidos *">
                                 <graphic>
                                    <FontIcon iconLiteral="gmi-create" />
                                 </graphic>
                              </Label>
                              <JFXTextField fx:id="pi_fieldLastName" styleClass="thin" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Teléfono">
                                 <graphic>
                                    <FontIcon iconLiteral="gmi-phone-iphone" />
                                 </graphic>
                              </Label>
                              <JFXTextField fx:id="pi_fieldPhone" styleClass="thin" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Correo">
                                 <graphic>
                                    <FontIcon iconLiteral="gmi-email" />
                                 </graphic>
                              </Label>
                              <JFXTextField fx:id="pi_fieldEmail" styleClass="thin" />
                           </children>
                        </VBox>
                        <VBox>
                           <children>
                              <Label text="Notas">
                                 <graphic>
                                    <FontIcon iconLiteral="gmi-info" />
                                 </graphic>
                              </Label>
                              <JFXTextField fx:id="pi_fieldNotes" promptText="Enfermedades / Lesiones" styleClass="thin" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox fx:id="fingerprintPane" spacing="5.0" styleClass="member-section">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <HBox HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label styleClass="bold" text="Lector de Huellas">
                                       <graphic>
                                          <FontIcon iconLiteral="gmi-fingerprint" />
                                       </graphic>
                                    </Label>
                                 </children>
                              </HBox>
                              <Label styleClass="thin" text="opcional" />
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <VBox fx:id="fp_boxFingerprint" fillWidth="false" maxHeight="150.0" maxWidth="150.0" prefHeight="150.0" prefWidth="150.0" style="-fx-border-color: -fx-color-border;" HBox.hgrow="NEVER" />
                              <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                                 <children>
                                    <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="ALWAYS">
                                       <children>
                                          <Label text="Huellas:" />
                                          <Label fx:id="fp_labelFingerprintCounter" text="0" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <VBox />
                        <HBox alignment="CENTER" spacing="5.0">
                           <children>
                              <JFXButton fx:id="fp_buttonCapture" styleClass="btn-primary" text="Iniciar captura">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </JFXButton>
                              <JFXButton fx:id="fp_buttonRestartCapture" styleClass="btn-secondary" text="Reiniciar huellas" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox fx:id="planPane" spacing="5.0" styleClass="member-section">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <Label styleClass="bold" text="Plan">
                                 <graphic>
                                    <FontIcon iconLiteral="gmi-date-range" />
                                 </graphic>
                              </Label>
                           </children>
                        </HBox>
                        <JFXToggleButton fx:id="sb_togglePersonalized" text="Personalizado" />
                        <JFXComboBox fx:id="sb_comboBoxSubscriptions" />
                        <VBox fx:id="sb_boxPersonalized">
                           <children>
                              <JFXDatePicker fx:id="sb_datePicker" nodeOrientation="RIGHT_TO_LEFT" promptText="Fecha de terminación" />
                              <HBox alignment="CENTER_LEFT">
                                 <children>
                                    <Label text="Precio *">
                                       <HBox.margin>
                                          <Insets right="10.0" />
                                       </HBox.margin>
                                       <graphic>
                                          <FontIcon iconLiteral="gmi-monetization-on" />
                                       </graphic>
                                    </Label>
                                    <JFXTextField fx:id="sb_fieldPrice" styleClass="thin" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT">
                                 <children>
                                    <Label prefWidth="95.0" text="Nota *">
                                       <HBox.margin>
                                          <Insets right="10.0" />
                                       </HBox.margin>
                                       <graphic>
                                          <FontIcon iconLiteral="gmi-comment" />
                                       </graphic>
                                    </Label>
                                    <JFXTextField fx:id="sb_fieldPriceNotes" styleClass="thin" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox spacing="5.0" styleClass="member-section">
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <Label styleClass="bold" text="Pago">
                                 <graphic>
                                    <FontIcon iconLiteral="gmi-payment" />
                                 </graphic>
                              </Label>
                           </children>
                        </HBox>
                        <JFXToggleButton fx:id="pym_togglePayment" selected="true" text="Pago completo" />
                        <VBox fx:id="pym_boxDebt">
                           <children>
                              <HBox alignment="CENTER_LEFT">
                                 <children>
                                    <Label text="Debe *">
                                       <HBox.margin>
                                          <Insets right="10.0" />
                                       </HBox.margin>
                                       <graphic>
                                          <FontIcon iconLiteral="gmi-monetization-on" />
                                       </graphic>
                                    </Label>
                                    <JFXTextField fx:id="pym_fieldDebt" styleClass="thin" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT">
                                 <children>
                                    <Label text="Nota *">
                                       <HBox.margin>
                                          <Insets right="10.0" />
                                       </HBox.margin>
                                       <graphic>
                                          <FontIcon iconLiteral="gmi-report" />
                                       </graphic>
                                    </Label>
                                    <JFXTextField fx:id="pym_fieldDebtNotes" styleClass="thin" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <JFXButton fx:id="buttonRegister" text="Registrar">
                           <styleClass>
                              <String fx:value="btn-secondary" />
                              <String fx:value="sucess-style" />
                           </styleClass>
                        </JFXButton>
                        <JFXButton fx:id="buttonCancel" text="Cancelar">
                           <styleClass>
                              <String fx:value="btn-secondary" />
                              <String fx:value="danger-style" />
                           </styleClass>
                        </JFXButton>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
         <styleClass>
            <String fx:value="member" />
            <String fx:value="day-theme" />
         </styleClass>
      </VBox>
   </content>
</ScrollPane>
